# ==============================================
# ROBOT CONFIGURATION
# ==============================================
# Copy this file to .env and customize as needed

# ----------------------------------------------
# API KEYS
# ----------------------------------------------
# OpenAI API Key (Required for AI conversations)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# Anthropic API Key (For Claude - Future)
ANTHROPIC_API_KEY=

# Google API Key (For Gemini - Future)
GOOGLE_API_KEY=

# ----------------------------------------------
# LLM (AI) PROVIDER
# ----------------------------------------------
# Options: "openai", "anthropic", "google"
# Currently only OpenAI is implemented
LLM_PROVIDER=openai

# Model Selection
# OpenAI models: gpt-3.5-turbo, gpt-4, gpt-4-turbo
# Recommendation: gpt-3.5-turbo (fast and cheap)
LLM_MODEL=gpt-3.5-turbo

# Response Length (tokens)
# Lower = shorter responses, Higher = longer responses
# Recommendation: 150 for conversational
LLM_MAX_TOKENS=150

# Creativity (0.0 to 2.0)
# Lower = more focused, Higher = more creative
# Recommendation: 0.7 for balanced
LLM_TEMPERATURE=0.7

# Conversation History
# How many messages to remember
LLM_MAX_HISTORY=10

# ----------------------------------------------
# SPEECH RECOGNITION PROVIDER
# ----------------------------------------------
# Options: "google" or "whisper"
# - google: Fast, cloud-based, English-focused (default)
# - whisper: Multilingual, offline, excellent Malayalam support
SPEECH_PROVIDER=google

# ----------------------------------------------
# WHISPER SETTINGS (Only used if SPEECH_PROVIDER=whisper)
# ----------------------------------------------

# Model Size: tiny, base, small, medium, large
# Recommendation for exhibition: "base"
WHISPER_MODEL=base

# Language: "en", "ml", "auto", or any ISO language code
# - en: English only
# - ml: Malayalam only
# - auto: Auto-detect language (RECOMMENDED for exhibitions)
WHISPER_LANGUAGE=auto

# Device: "cpu" or "cuda"
# - cpu: Works on all computers
# - cuda: Much faster, requires NVIDIA GPU with CUDA
WHISPER_DEVICE=cpu

# ----------------------------------------------
# TEXT-TO-SPEECH PROVIDER
# ----------------------------------------------
# Currently only "google" is supported
TTS_PROVIDER=google

# ----------------------------------------------
# ENVIRONMENT SETTINGS
# ----------------------------------------------
ENVIRONMENT=development
DEBUG=True

# ----------------------------------------------
# LOGGING
# ----------------------------------------------
LOG_LEVEL=INFO
LOG_FILE=data/logs/robot.log

